<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_data_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.customviews.TypefaceTextView
            android:id="@+id/tv_sessionInputYes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:text="Runs"
            android:textColor="@color/dashboard_marque_text_color"
            android:textSize="?attr/app_text_size_extra_small"
            app:custom_font="?attr/app_font_normal" />

        <View
            android:layout_width="@dimen/dv1"
            android:layout_height="match_parent"
            android:background="?attr/app_divider_color" />

        <com.customviews.TypefaceTextView
            android:id="@+id/tv_ResultValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:text="@string/p_l"
            android:textColor="@color/dashboard_marque_text_color"
            android:textSize="?attr/app_text_size_extra_small"
            app:custom_font="?attr/app_font_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dv1"
        android:layout_below="@+id/ll_data_lay"
        android:background="?attr/app_divider_color" />

</RelativeLayout>