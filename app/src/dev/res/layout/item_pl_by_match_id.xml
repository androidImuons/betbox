<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5"
        android:elevation="@dimen/dp2"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="@dimen/dp5"
        app:cardElevation="@dimen/dp2"
        app:contentPadding="@dimen/dp5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_sno_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S.No: "
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_small"
                        app:custom_font="?attr/app_font_bold" />

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_s_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_toRightOf="@+id/tv_sno_text"
                        android:text="S.No: "
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_small"
                        app:custom_font="?attr/app_font_normal" />

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Date"
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_small"
                        app:custom_font="?attr/app_font_normal" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.customviews.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Market Name:"
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_small"
                        app:custom_font="?attr/app_font_bold" />

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:ellipsize="end"
                        android:inputType="textMultiLine"
                        android:maxLines="3"
                        android:text="Event name"
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_small"
                        app:custom_font="?attr/app_font_normal" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_pl"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <com.customviews.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="P|L"
                            android:textColor="?attr/app_text_color"
                            android:textSize="?attr/app_text_size_small"
                            app:custom_font="?attr/app_font_bold" />

                        <com.customviews.TypefaceTextView
                            android:id="@+id/tv_pl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="value"
                            android:textColor="@color/color_green"
                            android:textSize="?attr/app_text_size_small"
                            app:custom_font="?attr/app_font_normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_profit"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_toRightOf="@+id/ll_pl"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <com.customviews.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comm"
                            android:textColor="?attr/app_text_color"
                            android:textSize="?attr/app_text_size_small"
                            app:custom_font="?attr/app_font_bold" />

                        <com.customviews.TypefaceTextView
                            android:id="@+id/tv_comm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="value"
                            android:textColor="@color/color_green"
                            android:textSize="?attr/app_text_size_small"
                            app:custom_font="?attr/app_font_normal" />
                    </LinearLayout>

                    <com.customviews.TypefaceTextView
                        android:id="@+id/iv_show_bet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_accent_radius5"
                        android:paddingBottom="@dimen/dp5"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingRight="@dimen/dp10"
                        android:paddingTop="@dimen/dp5"
                        android:text="Show Bet"
                        android:textColor="?attr/btn_text_color"
                        android:textSize="?attr/app_text_size_normal"
                        app:custom_font="?attr/app_font_normal" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>