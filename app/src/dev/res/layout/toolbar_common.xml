<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_tool_bar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/actionBarColor"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_menu_left"
            android:layout_width="?attr/actionBarIconSize"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp5"
            android:padding="@dimen/dp8"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_menu"
            android:tint="?attr/actionBarIconTint"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="?attr/actionBarIconSize"
            android:layout_height="match_parent"
            android:padding="@dimen/dp15"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_back"
            android:tint="?attr/actionBarIconTint"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dp160"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp5"
            android:src="@mipmap/logo" />

    </LinearLayout>


    <com.customviews.TypefaceTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="?attr/actionBarIconTint"
        android:textSize="?attr/actionBarTitleSize"
        app:custom_font="?attr/app_font_medium" />


    <LinearLayout
        android:id="@+id/ll_right_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp5"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_user_icon"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:src="@mipmap/icon_wallet"
            android:tint="?attr/actionBarIconTint" />

        <com.customviews.TypefaceTextView
            android:id="@+id/tv_credit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0.00"
            android:textColor="?attr/actionBarIconTint"
            android:textSize="@dimen/sp13"
            app:custom_font="?attr/app_font_bold" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="?attr/actionBarIconSize"
            android:layout_height="?attr/actionBarIconSize"
            android:layout_marginStart="@dimen/dp5"
            android:padding="@dimen/dp10"
            android:src="@mipmap/search"
            android:tint="?attr/actionBarIconTint" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_alignParentBottom="true"
        android:background="@color/colorGray_50" />


</RelativeLayout>




