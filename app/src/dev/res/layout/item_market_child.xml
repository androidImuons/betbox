<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dv1"
        android:background="?attr/app_divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:focusable="false"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/dp5">

            <com.customviews.TypefaceTextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Sunrisers Hyderabad"
                android:textColor="?attr/app_text_color"
                android:textSize="?attr/app_text_size_small"
                app:custom_font="?attr/app_font_medium" />

            <com.customviews.TypefaceTextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="0.00"
                android:textColor="?attr/app_text_color"
                android:textSize="?attr/app_text_size_extra_small"
                app:custom_font="?attr/app_font_normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/color_back"
            android:focusable="false"
            android:gravity="center"
            android:orientation="vertical">

            <com.customviews.TypefaceTextView
                android:id="@+id/tv_back_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.9"
                android:textColor="?attr/app_text_color"
                android:textSize="?attr/app_text_size_small"
                app:custom_font="?attr/app_font_medium" />

            <com.customviews.TypefaceTextView
                android:id="@+id/tv_back_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2776"
                android:textColor="?attr/app_text_color"
                android:textSize="?attr/app_text_size_extra_small"
                app:custom_font="?attr/app_font_normal" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/color_lay"
            android:focusable="false"
            android:gravity="center"
            android:orientation="vertical">

            <com.customviews.TypefaceTextView
                android:id="@+id/tv_lay_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.02"
                android:textColor="?attr/app_text_color"
                android:textSize="?attr/app_text_size_small"
                app:custom_font="?attr/app_font_medium" />

            <com.customviews.TypefaceTextView
                android:id="@+id/tv_lay_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3563"
                android:textColor="?attr/app_text_color"
                android:textSize="?attr/app_text_size_extra_small"
                app:custom_font="?attr/app_font_normal" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

