<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="@dimen/dp5"
        app:cardElevation="@dimen/dp2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_accent_topradius5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp5"
                    android:paddingTop="@dimen/dp3"
                    android:paddingEnd="@dimen/dp5"
                    android:paddingBottom="@dimen/dp3">

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_sno_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S.No: "
                        android:textColor="@color/color_white"
                        android:textSize="?attr/app_text_size_extra_small"
                        app:custom_font="?attr/app_font_medium" />

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_s_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_toRightOf="@+id/tv_sno_text"
                        android:text="S.No: "
                        android:textColor="@color/color_white"
                        android:textSize="?attr/app_text_size_extra_small"
                        app:custom_font="?attr/app_font_medium" />

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Date"
                        android:textColor="@color/color_white"
                        android:textSize="?attr/app_text_size_extra_small"
                        app:custom_font="?attr/app_font_normal" />
                </RelativeLayout>

                <com.customviews.TypefaceTextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp5"
                    android:ellipsize="end"
                    android:inputType="textMultiLine"
                    android:maxLines="4"
                    android:text="Narration"
                    android:textColor="?attr/app_text_color"
                    android:textSize="?attr/app_text_size_extra_small"
                    app:custom_font="?attr/app_font_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_pl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <com.customviews.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Credit"
                            android:textColor="?attr/app_text_color"
                            android:textSize="?attr/app_text_size_extra_small"
                            app:custom_font="?attr/app_font_medium" />

                        <com.customviews.TypefaceTextView
                            android:id="@+id/tv_credit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="value"
                            android:textColor="@color/color_green"
                            android:textSize="?attr/app_text_size_extra_small"
                            app:custom_font="?attr/app_font_normal" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorGrayMoreLight" />


                    <LinearLayout
                        android:id="@+id/ll_profit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.customviews.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Debit"
                            android:textColor="?attr/app_text_color"
                            android:textSize="?attr/app_text_size_extra_small"
                            app:custom_font="?attr/app_font_medium" />

                        <com.customviews.TypefaceTextView
                            android:id="@+id/tv_debit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="value"
                            android:textColor="@color/color_red"
                            android:textSize="?attr/app_text_size_extra_small"
                            app:custom_font="?attr/app_font_normal" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorGrayMoreLight" />

                    <LinearLayout
                        android:id="@+id/ll_liability"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.customviews.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balance"
                            android:textColor="?attr/app_text_color"
                            android:textSize="?attr/app_text_size_extra_small"
                            app:custom_font="?attr/app_font_medium" />

                        <com.customviews.TypefaceTextView
                            android:id="@+id/tv_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="value"
                            android:textColor="@color/color_green"
                            android:textSize="?attr/app_text_size_extra_small"
                            app:custom_font="?attr/app_font_normal" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorGrayMoreLight" />

                    <LinearLayout
                        android:id="@+id/ll_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:orientation="vertical">

                        <com.customviews.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Id"
                            android:textColor="?attr/app_text_color"
                            android:textSize="?attr/app_text_size_extra_small"
                            app:custom_font="?attr/app_font_medium" />

                        <com.customviews.TypefaceTextView
                            android:id="@+id/tv_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="value"
                            android:textColor="?attr/app_text_color"
                            android:textSize="?attr/app_text_size_extra_small"
                            app:custom_font="?attr/app_font_normal" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>