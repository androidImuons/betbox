<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="@dimen/dp5"
        app:cardElevation="@dimen/dp2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_accent_topradius5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp5"
                    android:paddingTop="@dimen/dp3"
                    android:paddingEnd="@dimen/dp5"
                    android:paddingBottom="@dimen/dp3">

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_sno_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S.No: "
                        android:textColor="@color/color_white"
                        android:textSize="?attr/app_text_size_extra_small"
                        app:custom_font="?attr/app_font_medium" />

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_s_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_toRightOf="@+id/tv_sno_text"
                        android:text="S.No: "
                        android:textColor="@color/color_white"
                        android:textSize="?attr/app_text_size_extra_small"
                        app:custom_font="?attr/app_font_medium" />

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Date"
                        android:textColor="@color/color_white"
                        android:textSize="?attr/app_text_size_extra_small"
                        app:custom_font="?attr/app_font_normal" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.customviews.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:text="Ip Address : "
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_extra_small"
                        app:custom_font="?attr/app_font_medium" />

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_ip_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:ellipsize="end"
                        android:inputType="textMultiLine"
                        android:maxLines="2"
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_extra_small"
                        app:custom_font="?attr/app_font_medium" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_device_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.customviews.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:text="Device Info: "
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_extra_small"
                        app:custom_font="?attr/app_font_medium" />

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_device_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:ellipsize="end"
                        android:inputType="textMultiLine"
                        android:maxLines="2"
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_extra_small"
                        app:custom_font="?attr/app_font_medium" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_browserInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.customviews.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:text="Browser Info: "
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_extra_small"
                        app:custom_font="?attr/app_font_medium" />

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_browser_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:ellipsize="end"
                        android:inputType="textMultiLine"
                        android:maxLines="2"
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_extra_small"
                        app:custom_font="?attr/app_font_medium" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>