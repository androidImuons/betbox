<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp1"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginRight="@dimen/dp1"
        android:layout_marginBottom="@dimen/dp3"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="@dimen/dp3"
        app:cardElevation="@dimen/dp1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_data_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp5">

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="2"
                        android:paddingTop="@dimen/dp5"
                        android:paddingBottom="@dimen/dp5"
                        android:text="Sunrisers Hyderabad"
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_extra_small"
                        app:custom_font="?attr/app_font_medium" />

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_max_exposure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_extra_small"
                        app:custom_font="?attr/app_font_medium" />

                    <ImageView
                        android:id="@+id/iv_max_exposure"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="@dimen/dp3"
                        android:src="@mipmap/ic_menu"
                        android:tint="@color/colorPrimary" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/color_lay"
                    android:focusable="false"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_lay_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.02"
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_small"
                        app:custom_font="?attr/app_font_medium" />

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_lay_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3563"
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_small"
                        app:custom_font="?attr/app_font_normal" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/color_back"
                    android:focusable="false"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_back_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.9"
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_small"
                        app:custom_font="?attr/app_font_medium" />

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_back_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2776"
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_small"
                        app:custom_font="?attr/app_font_normal" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_message_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ll_data_lay"
                android:layout_alignBottom="@+id/ll_data_lay"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">


                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <com.customviews.TypefaceTextView
                    android:id="@+id/tv_message"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/color_result_awaiting"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Message"
                    android:textColor="?attr/app_text_color"
                    android:textSize="?attr/app_text_size_small"
                    app:custom_font="?attr/app_font_normal" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_data_lay"
                android:background="@color/fancy_data_detail_bg_color">

                <LinearLayout
                    android:id="@+id/ll_fancy_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white50"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dv1"
                        android:background="?attr/app_divider_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.customviews.TypefaceTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:padding="@dimen/dp5"
                            android:text="Runs"
                            android:textColor="@color/dashboard_marque_text_color"
                            android:textSize="?attr/app_text_size_extra_small"
                            app:custom_font="?attr/app_font_normal" />

                        <View
                            android:layout_width="@dimen/dv1"
                            android:layout_height="match_parent"
                            android:background="?attr/app_divider_color" />

                        <com.customviews.TypefaceTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:padding="@dimen/dp5"
                            android:text="@string/p_l"
                            android:textColor="@color/dashboard_marque_text_color"
                            android:textSize="?attr/app_text_size_extra_small"
                            app:custom_font="?attr/app_font_normal" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dv1"
                        android:background="?attr/app_divider_color" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>

